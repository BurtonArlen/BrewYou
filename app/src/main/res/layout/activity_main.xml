<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.burton.arlen.brewyou.MainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to BrewYou"
        android:layout_marginTop="30dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_below="@+id/welcomeText"
        android:id="@+id/taglineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets Find You Brews"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:layout_marginTop="5sp"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/aboutPageButton"
        android:layout_width="100sp"
        android:layout_height="270sp"
        android:text="About Us"
        android:textSize="11sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140sp"/>
    <Button
        android:id="@+id/youBrewPageButton"
        android:layout_width="100sp"
        android:layout_height="270sp"
        android:text="The Brews For You"
        android:textSize="11sp"
        android:layout_marginLeft="-102sp"
        android:layout_alignLeft="@+id/aboutPageButton"
        android:layout_marginTop="100sp"
        />
    <Button
        android:id="@+id/notYouBrewPageButton"
        android:layout_width="100sp"
        android:layout_height="270sp"
        android:text="Brews Not For you"
        android:textSize="11sp"
        android:layout_marginLeft="102sp"
        android:layout_alignLeft="@+id/aboutPageButton"
        android:layout_marginTop="180sp"
        />

    <Button
        android:id="@+id/searchBeerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Search (replace with colloquialism related to beer)"
        android:textSize="11sp"/>

</RelativeLayout>
