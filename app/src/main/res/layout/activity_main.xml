<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.burton.arlen.brewyou.ui.MainActivity"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@drawable/anim_res"
        android:id="@+id/imageLogin"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:id="@+id/mainSearchButton"
        android:background="@drawable/main_search"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/youBrewPageButton"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/list_button_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="10sp"
        android:layout_height="10sp"
        android:id="@+id/anim2"
        android:background="@drawable/anim_res"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/notYouBrewPageButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/notYouBrewPageButton"
        app:layout_constraintBottom_toBottomOf="@+id/notYouBrewPageButton"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="10sp"
        android:layout_height="10sp"
        android:id="@+id/anim1"
        android:background="@drawable/anim_res"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/youBrewPageButton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/youBrewPageButton"
        app:layout_constraintTop_toTopOf="@+id/youBrewPageButton"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/notYouBrewPageButton"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/list_button_image_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="You'll find your liked beers here"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/txt_res"
        android:id="@+id/textView2"
        android:rotation="-11"
        android:layout_marginStart="80sp"
        android:layout_alignTop="@+id/notYouBrewPageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        android:layout_marginLeft="80dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:background="@drawable/txt_res"
        android:text="Manage the ones you don't like here"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/imageView"
        android:rotation="14"
        android:id="@+id/textView3"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:background="@drawable/arrow_down"
        android:id="@+id/imageView2"
        android:layout_marginStart="95sp"
        android:layout_marginLeft="95dp"
        android:rotation="50"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/youBrewPageButton"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30sp"
        android:layout_height="70sp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/notYouBrewPageButton"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/arrow_up"
        android:rotation="200"
        app:layout_constraintBottom_toTopOf="@+id/notYouBrewPageButton"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
