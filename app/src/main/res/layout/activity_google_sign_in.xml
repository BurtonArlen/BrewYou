<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.burton.arlen.brewyou.ui.GoogleSignInActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:text="Welcome to BrewYou"
        android:textAllCaps="true"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:rotation="3"
        android:textColor="#000"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/imageLogin" />
    <TextView
        android:layout_below="@+id/welcomeText"
        android:id="@+id/taglineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets Find You Some Brews"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:rotation="-2"
        android:textColor="#000"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.526"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@drawable/logo_image"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/imageLogin"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/taglineText" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taglineText" />

</android.support.constraint.ConstraintLayout>
